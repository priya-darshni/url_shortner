<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>shortern your URL</title>
  </head>
  <body>
       <div class="container">
         <h1>URL Shortner</h1>
         <form action="/shorturls" method="post" class="my-4 form-inline">
           <label for="ogurl">URL</label>
           <input type="url" name="ogurl" required placeholder="enter the url" id="ogurl" class="form-control col mr-2">
           <button class="btn btn-success" type="submit" name="button">shortern</button>
         </form>
         <table class="table table-striped table-responsive">
           <thead>
             <tr>
               <th>Original URL</th>
               <th>shrinked URL</th>
               <th>Clicks</th>
             </tr>
           </thead>
           <tbody>
             <% shorturls.forEach(shorturl =>{ %>
               <tr>
                 <td><a href="<%= shorturl.orignal %>"><%= shorturl.orignal %></a></td>
                 <td><a href="<%= shorturl.short %>"><%= shorturl.short %></a></td>
                 <td><%= shorturl.clicks %></td>
               </tr>
             <% }) %>
           </tbody>
         </table>
       </div>
  </body>
</html>
